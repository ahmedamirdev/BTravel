@using BTravel.DAL.Entities;
@model Contract

<div class="container">
	<div class="page-inner">
		<div class="page-header">
			<h4 class="fw-bold mb-3">Add New Contract</h4>
			<ul class="breadcrumbs mb-3">
				<li class="nav-home">
					<a href="~/Dashboard/Index">
						<i class="icon-home"></i>
					</a>
				</li>
				<li class="separator">
					<i class="icon-arrow-right"></i>
				</li>
				<li class="nav-item">
					<a href="#">Contracts</a>
				</li>
				<li class="separator">
					<i class="icon-arrow-right"></i>
				</li>
				<li class="nav-item">
					<a href="#">Add New Contract</a>
				</li>
			</ul>
		</div>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="SubmitContact" asp-controller="Contact" method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hotel Details</div>
						</div>
						<div class="card-body">
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-home"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Hotel Name" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-bed"></i>
											</span>
											<input asp-for="NoOfRooms" class="form-control" placeholder="No. Of Rooms" />
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-dollar-sign"></i>
											</span>
											<input asp-for="RatePerNight" class="form-control" placeholder="Rate / Night" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-moon"></i>
											</span>
											<input asp-for="NoOfNights" class="form-control" placeholder="No. Of Nights" />
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card-header">
							<div class="card-title">Customer Details</div>
						</div>
						<div class="card-body">
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-user"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Customer Name" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-user"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Company Name" />
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-at"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Email" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-phone"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Phone Number" />
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-id-card"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Name on Credit Card" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-credit-card"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Credit Card No." />
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-calendar-alt"></i>
											</span>
											<input asp-for="HotelName" type="date" class="form-control" placeholder="Exp. Date" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-credit-card"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="CVC. Code" />
										</div>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-map-marker-alt"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Billing Address" />
										</div>
									</div>
								</div>
								<div class="col-md-6 col-lg-6">
									<div class="form-group">
										<div class="input-icon">
											<span class="input-icon-addon">
												<i class="fas fa-info"></i>
											</span>
											<input asp-for="HotelName" class="form-control" placeholder="Postal Code" />
										</div>
									</div>
								</div>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success" type="submit" style="font-weight:bold">Save Contract</button>
							<button class="btn btn-danger" type="reset" style="font-weight:bold">Reset Form</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>