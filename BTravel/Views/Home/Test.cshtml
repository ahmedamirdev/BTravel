            // }
            // var signatureImage = canvas.toDataURL(); Convert signature to Base64
            // document.getElementById("signatureData").value = signatureImage;
            // document.getElementById("signatureForm").submit();
             var signatureData = canvas.toDataURL(); // Convert to Base64
            console.log(signatureData);
        });



             


    </script>

</body>
</html>
